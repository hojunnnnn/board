{{>layout/header}}

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            {{#posts}}
            <div class="form-group">
                <label for="id">번호</label>
                <input type="text" class="form-control" id="id" value="{{posts.id}}" readonly>
            </div>

            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{posts.title}}" readonly>
            </div>

            <div class="form-group">
                <label for="modifiedDate">등록일</label>
                <input type="text" class="form-control" id="modifiedDate" value="{{posts.modifiedDate}}" readonly>
            </div>

            <div class="form-group">
                <label for="writer">작성자</label>
                <input type="text" class="form-control" id="writer" value="{{posts.writer}}" readonly>
            </div>

            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" value="{{posts.content}}" readonly></textarea>
            </div>
            {{/posts}}
        </form>
        <!--버튼-->
    </div>
</div>

{{>layout/footer}}